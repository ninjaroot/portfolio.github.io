.featured-image { box-shadow: 0 6px 30px rgba(0,0,0,0.25); }

/* لا نغيّر أبعاد yt-lite إطلاقًا؛ بس نثبت الصورة والزّر فوقها */
.yt-lite { position: relative; }

/* الصورة تشغل كامل مساحة الصندوق (المساحة يحددها القالب نفسه) */
.yt-lite > img{
  position: absolute; 
  inset: 0;
  width: 100%; 
  height: 100%;
  object-fit: cover;      /* تمنع تمدد غريب وتحافظ على النسبة */
  display: block !important;
  opacity: 1 !important;
  z-index: 1;
}

/* علامة التشغيل (من غير ما تمنع الكليك) */
.yt-lite > button{
  all: unset;
  position: absolute;
  left: 50%; top: 50%;
  transform: translate(-50%, -50%);
  width: 64px; height: 64px;
  border-radius: 50%;
  background: rgba(0,0,0,.35);
  border: 2px solid rgba(255,255,255,.9);
  display: grid; place-items: center;
  color: #fff; font-size: 26px; line-height: 1;
  box-shadow: 0 4px 18px rgba(0,0,0,.35);
  pointer-events: none;   /* ما يمنعش الضغط على العنصر نفسه */
  z-index: 2;
}

/* عند التشغيل القالب بيحط .play → نخفي الصورة والزر ونسيب الـ iframe */
.yt-lite.play > img,
.yt-lite.play > button{ display: none !important; }

/* لا نلمس أبعاد yt-lite إطلاقًا */
.yt-lite { position: relative; }

/* Overlay: دائرة + مثلث Play فوق الصورة */
.yt-lite::before,
.yt-lite::after{
  content: "";
  position: absolute;
  left: 50%;
  top: 50%;
  pointer-events: none;   /* الكليك يشتغل على العنصر نفسه */
  z-index: 2;
  transition: transform .18s ease, opacity .18s ease;
}

/* الدائرة */
.yt-lite::before{
  width: 64px; height: 64px;
  transform: translate(-50%, -50%);
  border-radius: 50%;
  background: rgba(0,0,0,.35);
  border: 2px solid rgba(255,255,255,.95);
  box-shadow: 0 4px 18px rgba(0,0,0,.35);
  opacity: .95;
}

/* المثلث */
.yt-lite::after{
  border-style: solid;
  border-width: 12px 0 12px 20px;
  border-color: transparent transparent transparent rgba(255,255,255,.98);
  transform: translate(calc(-50% + 6px), -50%);
  opacity: .98;
}

/* لمسة هوفر خفيفة */
.yt-lite:hover::before,
.yt-lite:hover::after{
  transform: translate(-50%, -50%) scale(1.05);
}

/* الصورة تملأ الصندوق ولا تتأثر */
.yt-lite > img{
  position: absolute; inset: 0;
  width: 100%; height: 100%;
  object-fit: cover;
  display: block !important;
  z-index: 1;
}

/* عند التشغيل (القالب بيضيف .play) نخفي الأيقونة ونسيب الـ iframe */
.yt-lite.play::before,
.yt-lite.play::after{ display: none !important; }
.yt-lite.play > img{ display: none !important; }
.yt-lite > button { display: none !important; }

.yt-lite.play > iframe{
  position: absolute; inset: 0; width: 100%; height: 100%; border: 0; z-index: 3;
}
