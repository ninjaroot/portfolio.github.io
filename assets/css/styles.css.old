/* ==== Video (YouTube lite) – square & larger + YouTube overlay icon ==== */
.yt-lite{
  position:relative;
  background:#000;
  cursor:pointer;
  display:block;
  width:100%;
  max-width:600px;           /* larger than before */
  aspect-ratio:1 / 1;        /* make it square */
  border-radius:12px;
  overflow:hidden;
  margin:0 auto 18px auto;   /* keep same flow */
}
/* thumbnail */
.yt-lite>img{
  width:100%;
  height:100%;
  object-fit:cover;
  filter:brightness(.92);
  transition:filter .2s ease;
}
.yt-lite:hover>img{ filter:brightness(.98); }
/* Hide any residual play button element inserted by JS */
.yt-lite>button{ display:none !important; }
/* When playing, show the iframe and hide the thumbnail/overlay */
.yt-lite.play>img{ display:none; }
.yt-lite.play>iframe{
  position:absolute; inset:0; width:100%; height:100%; border:0;
}

/* Centered YouTube play icon */
.yt-lite::after{
  content:"";
  position:absolute;
  inset:0;
  margin:auto;
  width:84px;
  height:60px;
  background:#0000
    url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='84' height='60' viewBox='0 0 84 60'><rect width='84' height='60' rx='12' fill='rgba(0,0,0,0.35)'/><path d='M33 20l24 10-24 10z' fill='%23fff'/></svg>")
    no-repeat center / contain;
  pointer-events:none;
  opacity:.9;
  transition:transform .15s ease, opacity .15s ease;
}
.yt-lite:hover::after{ transform:scale(1.04); opacity:1; }
.yt-lite.play::after{ display:none; }

/* Responsive: full width on small screens */
@media (max-width: 767.98px){
  .yt-lite{ max-width:100%; border-radius:10px; }
}


/* Performance helpers */
.yt-lite > img { will-change: opacity, filter; }
@font-face { font-display: swap; }

/* ===== Fix: prevent image/text overlap in project items ===== */
.item.project-card {

  display: grid !important;
  grid-template-columns: minmax(220px, 340px) 1fr;
  gap: clamp(16px, 2.5vw, 28px);
  align-items: start;
}


.item.project-card > [class*="col-"] {
  width: auto !important;
  max-width: 100% !important;
  flex: 0 0 auto !important;
  float: none !important;
  padding: 0 !important;    
}


.item.project-card picture,
.item.project-card img {
  display: block;
  width: 100%;
  height: auto;
  float: none !important;
  margin: 0;
  border-radius: 8px;       
  object-fit: cover;
}

.item.project-card .col-md-8 {
